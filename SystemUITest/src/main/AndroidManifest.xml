<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vivo.test.systemui" >

    <uses-permission android:name="android.permission.STATUS_BAR" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.FORCE_STOP_PACKAGES" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.systemstatus.SystemStatusTestActivity"
            android:label="@string/title_activity_system_status_test" >
        </activity>
        <activity
            android:name=".activity.fullscreen.FullScreenTestActivity"
            android:label="@string/title_activity_full_screen_test"
            android:theme="@style/AppThemeNoTitle" >
        </activity>
        <activity
            android:name=".activity.battery.BatteryWarningTestActivity"
            android:label="@string/title_activity_battery_warning_test" >
        </activity>
        <activity
            android:name=".activity.recent.RecentTaskTestActivity"
            android:label="@string/title_activity_recent_task_test" >
        </activity>
        <activity
            android:name=".activity.notification.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name=".activity.notification.NormalNotificationTestActivity"
            android:label="@string/title_activity_normal_notification_test" >
        </activity>
        <activity
            android:name=".activity.notification.CustomNotificationTestActivity"
            android:label="@string/title_activity_custom_notification_test" >
        </activity>
        <activity android:name=".activity.SystemUIDemoActivity"
            android:label="@string/activty_systemui_demo_mode"
            android:theme="@style/MyMaterialTheme">
        </activity>
    </application>

</manifest>
